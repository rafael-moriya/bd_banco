CREATE TABLE emprestar_livros (cod_livros int PRIMARY KEY,titulo varchar(50),autor varchar(50));

CREATE TABLE amigos_dono (cod_amigos int PRIMARY KEY,nome varchar(50),idade int);

CREATE TABLE emprestimos (cod_emprestimos int PRIMARY KEY,id_livros integer,cod_amigos integer,data_emprestimo date,);

ALTER TABLE emprestimos ADD CONSTRAINT fk_livros FOREIGN KEY (id_livros) REFERENCES livros (id_livros);
ALTER TABLE emprestimos ADD CONSTRAINT fk_amigos FOREIGN KEY (cod_amigos) REFERENCES amigos (cod_amigos);

