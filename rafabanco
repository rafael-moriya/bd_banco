select * from emprestimos

select l.id_livros, l.titulo, a.cod_amigos, a.nome,a.idade, e.data_emprestimo
from emprestimos as e
inner join amigos_dono as a on a.cod_amigos = e.cod_amigos
inner join emprestar_livros as l on l.id_livros = e.cod_livros